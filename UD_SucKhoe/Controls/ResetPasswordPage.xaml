<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UD_SucKhoe.ResetPasswordPage"
             Title="Đặt lại mật khẩu">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label x:Name="EmailLabel" FontAttributes="Bold" />
        <Entry x:Name="NewPasswordEntry" Placeholder="Mật khẩu mới" IsPassword="True"/>
        <Entry x:Name="ConfirmPasswordEntry" Placeholder="Xác nhận mật khẩu" IsPassword="True"/>
        <Button Text="Đổi mật khẩu" Clicked="OnChangePasswordClicked"/>
    </VerticalStackLayout>
</ContentPage>